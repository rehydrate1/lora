# Identity Server configuration
# Email configuration for "thethings.example.com"
is:
  email:
    sender-name: "The Things Stack"
    sender-address: "noreply@188.170.78.67"
    network:
      name: "The Things Stack"
      console-url: "https://188.170.78.67/console"
      identity-server-url: "https://188.170.78.67/oauth"

    # If sending email with Sendgrid
    # provider: sendgrid
    # sendgrid:
    #   api-key: '...'              # enter Sendgrid API key

    # If sending email with SMTP
    # provider: smtp
    # smtp:
    #   address:  '...'             # enter SMTP server address
    #   username: '...'             # enter SMTP server username
    #   password: '...'             # enter SMTP server password

  # Web UI configuration for "thethings.example.com":
  oauth:
    ui:
      canonical-url: "https://188.170.78.67/oauth"
      is:
        base-url: "https://188.170.78.67/api/v3"

# HTTP server configuration
http:
  cookie:
    block-key: "" # generate 32 bytes (openssl rand -hex 32)
    hash-key: "" # generate 64 bytes (openssl rand -hex 64)
  metrics:
    password: "metrics" # choose a password
  pprof:
    password: "pprof" # choose a password

# If using custom certificates:
# tls:
#   source: file
#   root-ca: /run/secrets/ca.pem
#   certificate: /run/secrets/cert.pem
#   key: /run/secrets/key.pem

# Let's encrypt for "thethings.example.com"
tls:
  source: "acme"
  acme:
    dir: "/var/lib/acme"
    email: "you@188.170.78.67"
    hosts: ["thethings.example.com"]
    default-host: "188.170.78.67"

# If Gateway Server enabled, defaults for "thethings.example.com":
gs:
  mqtt:
    public-address: "188.170.78.67:1882"
    public-tls-address: "188.170.78.67:8882"
  mqtt-v2:
    public-address: "188.170.78.67:1881"
    public-tls-address: "188.170.78.67:8881"

# If Gateway Configuration Server enabled, defaults for "thethings.example.com":
gcs:
  basic-station:
    default:
      lns-uri: "wss://188.170.78.67:8887"
  the-things-gateway:
    default:
      mqtt-server: "mqtts://188.170.78.67:8881"

# Web UI configuration for "thethings.example.com":
console:
  ui:
    canonical-url: "https://188.170.78.67/console"
    account-url: "https://188.170.78.67/oauth"
    is:
      base-url: "https://188.170.78.67/api/v3"
    gs:
      base-url: "https://188.170.78.67/api/v3"
    gcs:
      base-url: "https://188.170.78.67/api/v3"
    ns:
      base-url: "https://188.170.78.67/api/v3"
    as:
      base-url: "https://188.170.78.67/api/v3"
    js:
      base-url: "https://188.170.78.67/api/v3"
    qrg:
      base-url: "https://188.170.78.67/api/v3"
    edtc:
      base-url: "https://188.170.78.67/api/v3"
    dcs:
      base-url: "https://188.170.78.67/api/v3"
  oauth:
    authorize-url: "https://188.170.78.67/oauth/authorize"
    token-url: "https://188.170.78.67/oauth/token"
    logout-url: "https://188.170.78.67/oauth/logout"
    client-id: "console"
    client-secret: "console" # choose or generate a secret

# If Application Server enabled, defaults for "thethings.example.com":
as:
  mqtt:
    public-address: "188.170.78.67:1883"
    public-tls-address: "188.170.78.67:8883"
  webhooks:
    downlink:
      public-address: "188.170.78.67:1885/api/v3"

# If Device Claiming Server enabled, defaults for "thethings.example.com":
dcs:
  oauth:
    authorize-url: "https://188.170.78.67/oauth/authorize"
    token-url: "https://188.170.78.67/oauth/token"
    logout-url: "https://188.170.78.67/oauth/logout"
    client-id: "device-claiming"
    client-secret: "device-claiming" # choose or generate a secret
  ui:
    canonical-url: "https://188.170.78.67/claim"
    as:
      base-url: "https://188.170.78.67/api/v3"
    dcs:
      base-url: "https://188.170.78.67/api/v3"
    is:
      base-url: "https://188.170.78.67/api/v3"
    ns:
      base-url: "https://188.170.78.67/api/v3"
